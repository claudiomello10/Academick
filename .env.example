# At least ONE LLM API key is required
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=

# Default LLM model for responses
DEFAULT_MODEL=gpt-5-mini

# Fast model for query enhancement (runs on every query, should be cheap)
QUERY_ENHANCEMENT_MODEL=gpt-5-nano

# Default study subject
DEFAULT_SUBJECT=Machine Learning

# Embedding model (default: BAAI/bge-m3)
EMBEDDING_MODEL=BAAI/bge-m3

# Device for ML models: cpu or cuda
DEVICE=cpu

# Path to pickle file with embeddings
DATA_PATH=data/embeddings.pkl

# Directory containing PDF files to process
PDF_DIRECTORY=books/
